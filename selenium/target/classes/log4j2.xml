<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <!-- Log file base path -->
  <Properties>
    <Property name="basePath">.</Property>
  </Properties>

  <Appenders>
    <!-- Console Output -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <!-- Rolling File Appender for Automation Logs -->
    <RollingFile name="File"
                 fileName="${basePath}/automation.log"
                 filePattern="${basePath}/automation-%d{yyyy-MM-dd-HH-mm}.log.gz">

      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>

      <Policies>
        <!-- Rotate the log file every 5 MB -->
        <SizeBasedTriggeringPolicy size="5MB"/>
      </Policies>

      <!-- Keep only 10 rolled log files -->
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <!-- Root Logger: captures all logs -->
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>

</Configuration>
